<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/selective_disclosure_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        tools:context="com.learningmachine.android.app.ui.cert.SelectiveDisclosureCertificateFragment">

        <WebView
            android:id="@+id/selective_disclosure_view"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/selective_disclosure_status"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/c5"
            android:fontFamily="@font/opensans_bold"
            android:gravity="center_vertical"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/material_sub_title_text_size"
            android:text="@string/selective_disclosure_instruction"
        />

        <Button
            android:id="@+id/dialog_positive_button"
            style="@style/RoundedButton.Dark"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:importantForAccessibility="no"
            android:text="@string/ime_action_done"
            app:layout_constraintBottom_toBottomOf="@+id/horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

    </LinearLayout>

</layout>