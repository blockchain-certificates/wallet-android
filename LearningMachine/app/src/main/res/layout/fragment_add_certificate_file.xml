<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingEnd="@dimen/fragment_add_certificate_linear_layout_start_padding"
        android:paddingStart="@dimen/fragment_add_certificate_linear_layout_start_padding"
        android:paddingTop="@dimen/fragment_add_certificate_linear_layout_top_padding"
        android:background="@color/white"
        tools:context=".ui.cert.AddCertificateFileFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_add_certificate_file_label"
            style="@style/Text.ListHeader"/>

        <Button
            android:id="@+id/choose_file_button"
            style="@style/RoundedButton.Light"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:text="@string/framgent_add_certificate_file_choose_file_button_title" />

        <Button
            android:id="@+id/import_button"
            style="@style/RoundedButton.Dark"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="16dp"
            android:text="@string/add_certificate_import" />

    </LinearLayout>

</layout>
